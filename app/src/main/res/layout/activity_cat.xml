<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CatActvity">

    <TextView
        android:id="@+id/tvCatMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <ImageView
        android:id="@+id/contenerjudul2"
        android:layout_width="317dp"
        android:layout_height="129dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oval" />

    <TextView
        android:id="@+id/judul3"
        android:layout_width="144dp"
        android:layout_height="63dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:inputType="textPersonName"
        android:text="ANIMAL LOVER"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/contenerjudul2"
        app:layout_constraintEnd_toStartOf="@+id/doge3"
        app:layout_constraintStart_toStartOf="@+id/contenerjudul2"
        app:layout_constraintTop_toTopOf="@+id/contenerjudul2" />

    <ImageView
        android:id="@+id/doge3"
        android:layout_width="83dp"
        android:layout_height="85dp"
        android:layout_marginStart="177dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/contenerjudul2"
        app:layout_constraintEnd_toEndOf="@+id/contenerjudul2"
        app:layout_constraintStart_toStartOf="@+id/contenerjudul2"
        app:layout_constraintTop_toTopOf="@+id/contenerjudul2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/doge" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenerjudul2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/bawah"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#00AFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/actionBarItemBackground" />

    <Button
        android:id="@+id/buttonmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/roboto_bold"
        android:text="MENU"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bawah"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bawah" />

</androidx.constraintlayout.widget.ConstraintLayout>